{% extends 'base.html.twig' %}

{% block title %}Mon compte !
{% endblock %}

{% block body %}
	<div class="container">
		<a href="{{path('compte_adresse_add')}}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
		<h1>
			Mes adresses
		</h1>
		C'est dans cet espace que vous allez pouvoir gérer toutes vos adresses
		<a href="{{path('compte')}}">Retour</a>
		<hr>
		{% if app.user.adresses|length == 0 %}
			<p class="text-center">
				Vous n'avez pas encore ajouté d'adresse dans votre compte client.Pour en ajouter une,veuillez
				<a href="{{path('compte_adresse_add')}}">cliquer ici</a>
			</p>
		{% else %}
			<div class="row">
				{% for adresse in app.user.adresses %}
					<div class="col-md-4">
						<div class="card" style="width: 18rem;">
							<div class="card-body">
								<h5 class="card-title">{{ adresse.name }}</h5>
								<p class="card-text">
									{{ adresse.address }},<br/>
									{{ adresse.postal }}
									-
									{{ adresse.city }}
									-
									{{ adresse.country }}
								</p>
								<a href="{{ path('compte_adresse_edit', { 'id' : adresse.id }) }}">Modifier</a>
								|
								<a href="{{ path('compte_adresse_delete', { 'id' : adresse.id }) }}">Supprimer</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
{% endblock %}
