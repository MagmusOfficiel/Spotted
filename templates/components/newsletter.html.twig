			{{form_widget(form.newsletterMail)}}
		</div>
		<div class="col-4">
			<label>
				<input class="btn-sm btn btn-warning" type="submit" name="submitPub">
			</label>
		</div>
	</div>
</div>
{{form_end(form)}}{% endif %}
