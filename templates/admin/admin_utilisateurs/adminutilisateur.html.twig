{% extends 'layout_admin.html.twig' %}


{% block title %}Liste des clients
{% endblock %}

{% block monTitre %}Liste des clients
{% endblock %}
{% block body %}
	<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
		<symbol id="check-circle-fill" fill="currentColor" viewbox="0 0 16 16">
			<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
		</symbol>
	</svg>
	<div class="col-10">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fixed-bottom text-center" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
				{{message}}
			</div>
		{% endfor %}
		<div>
			Clients / Clients

			<h2>Gérez vos clients</h2>
		</div>
		<ul class="nav justify-content-end">
			<li class="nav-item p-2">
				<a class="nav-link btn btn-info text-white" aria-current="page" href="{{path('creationUtilisateur')}}">
					<i class="fas fa-plus-circle align-middle"></i>&nbsp;&nbsp;Ajouter un nouveau client</a>
			</li>
			<li class="nav-item p-2">
				<a class="nav-link btn btn-secondary text-white" href="#">Module recommandé</a>
			</li>
			<li class="nav-item p-2">
				<a class="nav-link btn btn-secondary text-white" href="#">Aide</a>
			</li>
		</ul>
		<table class="table table-perso">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Sexe</th>
					<th scope="col">Nom</th>
					<th scope="col">Prenom</th>
					<th scope="col">Adresse e-mail</th>
					<th scope="col">Date de naissance</th>
					<th scope="col">Pays</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for utilisateur in utilisateurs %}
					<tr>
						<th>{{utilisateur.id}}</th>
						<td>{{utilisateur.userSexe}}</td>
						<td>{{utilisateur.username}}</td>
						<td>{{utilisateur.userPrenom}}</td>
						<td>{{utilisateur.userMail}}</td>
						<td>{{utilisateur.userNaissance|date('d/m/Y')}}</td>
						<td>{{utilisateur.userNationalite.paysNom}}</td>
						<td>
							<a href="{{path('modifUtilisateur',{'id' : utilisateur.id})}}" class="col btn btn-warning">Modifier</a>
							<form method="post" class="col" action="{{path('supUtilisateur',{'id' : utilisateur.id})}}" onsubmit="return confirm('Voulez-vous vraiment supprimer')">
								<input type="hidden" name="_method" value="SUP">
								<input type="hidden" name="_token" value="{{csrf_token('SUP' ~ utilisateur.id)}}">
								<input type="submit" class="col btn btn-danger" value="supprimer">
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div></div>{% endblock %}
